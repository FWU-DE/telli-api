{
  "name": "@dgpt/db",
  "version": "0.0.0",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./helpers": "./helpers/index.ts"
  },
  "scripts": {
    "db:generate": "dotenv -e ../../.env -- drizzle-kit generate",
    "db:migrate": "dotenv -e ../../.env -- drizzle-kit migrate --config=./drizzle.config.ts",
    "db:migrate:pipeline": "drizzle-kit migrate --config=./drizzle.config.ts",
    "db:seed": "dotenv -e ../../.env -- tsx src/seed.ts",
    "db:seed:from-stage": "dotenv -e ../../.env -- tsx src/seed-from-stage.ts",
    "types": "tsc --noEmit",
    "lint": "eslint \"**/*.ts*\" --max-warnings 0"
  },
  "dependencies": {
    "@types/bcryptjs": "3.0.0",
    "bcryptjs": "3.0.3",
    "drizzle-kit": "0.31.6",
    "drizzle-orm": "0.44.7",
    "drizzle-zod": "0.8.3",
    "nanoid": "5.1.6",
    "pg": "8.16.3",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@dgpt/eslint-config": "workspace:*",
    "@dgpt/llm-model": "workspace:*",
    "@dgpt/typescript-config": "workspace:*",
    "@dgpt/utils": "workspace:*",
    "@types/node": "24.10.0",
    "@types/pg": "8.15.6",
    "dotenv-cli": "11.0.0",
    "eslint": "8.57.0",
    "tsx": "4.20.6",
    "typescript": "5.9.3"
  }
}
