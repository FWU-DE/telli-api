{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": [
    "API_BASE_URL",
    "API_KEY",
    "API_NAME",
    "APP_VERSION",
    "DATABASE_URL",
    "GOOGLE_APPLICATION_CREDENTIALS",
    "NODE_ENV",
    "OTEL_EXPORTER_OTLP_METRICS_ENDPOINT",
    "OTEL_EXPORTER_OTLP_TRACES_ENDPOINT",
    "OTEL_METRIC_EXPORT_INTERVAL",
    "OTEL_METRIC_EXPORT_TIMEOUT",
    "PORT",
    "SENTRY_DSN",
    "SENTRY_ENVIRONMENT",
    "SENTRY_PROFILE_SESSION_SAMPLE_RATE",
    "SENTRY_TRACES_SAMPLE_RATE",
    "STAGE_DATABASE_URL"
  ],
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"],
      "dependsOn": ["^build"],
      "passThroughEnv": ["CI", "SENTRY_AUTH_TOKEN", "SENTRY_ORG", "SENTRY_PROJECT"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "types": {
      "dependsOn": []
    },
    "start": {
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "db:seed": {
      "cache": false,
      "dependsOn": []
    },
    "db:seed:from-stage": {
      "cache": false,
      "dependsOn": []
    },
    "db:migrate": {
      "cache": false,
      "dependsOn": []
    }
  }
}
